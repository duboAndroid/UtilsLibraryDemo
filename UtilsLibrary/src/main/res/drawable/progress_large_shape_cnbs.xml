<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360">

    <shape android:innerRadiusRatio="4"
        android:shape="ring"
        android:thicknessRatio="33"
        android:useLevel="false">
        <gradient
            android:centerColor="#5e1e90ff"
            android:centerY="0.50"
            android:endColor="#FFFFFF"
            android:startColor="#c91e90ff"
            android:type="sweep"
            android:useLevel="false"/>
    </shape>

</rotate>
