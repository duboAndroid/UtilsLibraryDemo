<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/message_show_shape"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/down_pro_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="题库下载中，请稍后..."
        android:textColor="@color/base_text_color"
        android:textSize="@dimen/BigTextSize16"/>

    <com.cnbs.utilslibrary.viewUtils.progressbar.NumberProgressBar
        android:id="@+id/down_pro_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_gravity="center"
        app:progress_unreached_color="@color/load_bg_color"
        app:progress_reached_color="@color/blue_light"
        app:progress_text_size="@dimen/SecTextSize14"
        app:progress_text_color="@color/blue_light"
        app:progress_text_offset="2dp"
        app:progress_reached_bar_height="3dp"
        app:progress_unreached_bar_height="2dp"/>

    <TextView
        android:id="@+id/down_pro_cancel"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="取消"
        android:textColor="@color/blue_light"
        android:textSize="@dimen/BigTextSize16"/>

</LinearLayout>
