<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_creat_qrimage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.cnbs.utilslibrarydemo.QRcode.CreatQRImageActivity">
    <EditText
        android:id="@+id/qr_et"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:hint="输入文字或网址"
        android:layout_width="match_parent"
        android:layout_height="48dp" />
<Button
    android:id="@+id/qr_button"
    android:layout_width="200dp"
    android:layout_marginLeft="8dp"
    android:layout_below="@+id/qr_et"
    android:hint="生成二维码"
    android:layout_height="48dp" />
    <CheckBox
        android:id="@+id/qr_cb"
        android:layout_width="150dp"
        android:layout_below="@+id/qr_et"
        android:layout_toRightOf="@+id/qr_button"
        android:text="是否添加logo"
        android:layout_height="48dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qr_button"
        android:id="@+id/qr_image"/>
</RelativeLayout>
