<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView0"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="20dp"
            android:background="@color/blue_light"
            android:gravity="center"
            android:text="下载Dialog"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/BigTextSize16" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="20dp"
            android:background="@color/blue_light"
            android:gravity="center"
            android:text="加载Dialog"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/BigTextSize16" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="20dp"
            android:background="@color/blue_light"
            android:gravity="center"
            android:text="消息弹窗"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/BigTextSize16" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="20dp"
            android:background="@color/blue_light"
            android:gravity="center"
            android:text="消息弹窗1"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/BigTextSize16" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="20dp"
            android:background="@color/blue_light"
            android:gravity="center"
            android:text="消息弹窗2"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/BigTextSize16" />

        <com.cnbs.utilslibrary.viewUtils.progressbar.NumberProgressBar
            android:layout_width="wrap_content"
            app:progress_reached_bar_height="5dp"
            app:progress_unreached_bar_height="2dp"
            app:progress_current="20"
            android:layout_height="20dp"
            android:layout_gravity="center" />

        <com.cnbs.utilslibrary.viewUtils.progressbar.RoundProgressBar
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:titleTextSize="10sp"
            app:roundColor="@color/load_bg_color"
            app:roundWidth="3dp"
            app:titleText="RoundProgressBar" />
    </LinearLayout>

</ScrollView>